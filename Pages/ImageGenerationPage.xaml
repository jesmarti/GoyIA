<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GoyIA.Pages.ImageGenerationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Generate Image"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Prompt Input Area -->
            <StackLayout Grid.Row="0" Spacing="15">
                <Border BackgroundColor="White" 
                        Stroke="#E0E0E0" 
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Editor x:Name="PromptEditor"
                            Text="{Binding Prompt}"
                            Placeholder="Enter your image prompt here... (e.g., 'A cute baby sea otter')"
                            PlaceholderColor="#9E9E9E"
                            TextColor="Black"
                            FontSize="16"
                            MinimumHeightRequest="100"
                            MaximumHeightRequest="150"
                            Margin="15"
                            BackgroundColor="Transparent" />
                </Border>

                <Button x:Name="GenerateButton"
                        Text="Generate Image"
                        Command="{Binding GenerateImageCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        IsEnabled="{Binding IsNotLoading}" />

                <Label x:Name="StatusLabel"
                       Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="#D32F2F"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Image Display Area - Only show when there's content -->
            <Border Grid.Row="1" 
                    BackgroundColor="White" 
                    Stroke="#E0E0E0" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    MinimumHeightRequest="300"
                    IsVisible="{Binding ShowImageArea}">
                <Grid>
                    <!-- Generated Image -->
                    <Image x:Name="GeneratedImage" 
                           Source="{Binding GeneratedImageSource}"
                           IsVisible="{Binding IsImageVisible}"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />

                    <!-- Loading State -->
                    <StackLayout IsVisible="{Binding IsLoading}"
                                 VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 Spacing="20">
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                           Color="#6200EE"
                                           Scale="1" />
                        <Label Text="Generating your image..." 
                               FontSize="16" 
                               HorizontalOptions="Center" 
                               TextColor="#6200EE"
                               FontAttributes="Italic" />
                    </StackLayout>
                </Grid>
            </Border>

            <!-- Welcome Message - Show when no image and not loading -->
            <StackLayout Grid.Row="1" 
                         IsVisible="{Binding ShowWelcomeMessage}"
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="20">
                <Label Text="ðŸŽ¨" 
                       FontSize="64" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE" />
                <Label Text="Ready to create amazing images!" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Bold" />
                <Label Text="Enter your prompt above and tap Generate Image" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="#9E9E9E" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage> 