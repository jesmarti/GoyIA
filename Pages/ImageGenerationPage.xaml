<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GoyIA.Pages.ImageGenerationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Generate Image"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Prompt Input Area -->
            <StackLayout Spacing="15">
                <Border BackgroundColor="White" 
                        Stroke="#E0E0E0" 
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Editor x:Name="PromptEditor"
                            Text="{Binding Prompt}"
                            Placeholder="Enter your image prompt here... (e.g., 'A cute baby sea otter')"
                            PlaceholderColor="#9E9E9E"
                            TextColor="Black"
                            FontSize="16"
                            MinimumHeightRequest="100"
                            MaximumHeightRequest="150"
                            Margin="15"
                            BackgroundColor="Transparent" />
                </Border>

                <Button x:Name="GenerateButton"
                        Text="Generate Image"
                        Command="{Binding GenerateImageCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        IsEnabled="{Binding IsNotLoading}" />

                <Label x:Name="StatusLabel"
                       Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="#D32F2F"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Loading Animation - appears below prompt when processing -->
            <StackLayout IsVisible="{Binding IsLoading}"
                         Spacing="20"
                         Margin="0,10,0,10">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   Color="#6200EE"
                                   Scale="1" />
                <Label Text="Generating your image..." 
                       FontSize="16" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Italic" />
            </StackLayout>

            <!-- Generated Image Display -->
            <Border BackgroundColor="White" 
                    Stroke="#E0E0E0" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    IsVisible="{Binding IsImageVisible}">
                <StackLayout Spacing="10" Margin="15">
                    <Label Text="🎨 Generated Image" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#6200EE"
                           HorizontalOptions="Center" />
                    <Image x:Name="GeneratedImage" 
                           Source="{Binding GeneratedImageSource}"
                           Aspect="AspectFit"
                           HeightRequest="350"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Border>

            <!-- Action Buttons - Share, Save to Device, and Save to Gallery -->
            <StackLayout Orientation="Horizontal" 
                         Spacing="10" 
                         HorizontalOptions="Center"
                         IsVisible="{Binding IsImageVisible}">
                <Button Text="📤 Share"
                        Command="{Binding ShareImageCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        WidthRequest="90"
                        CornerRadius="22" />

                <Button Text="💾 Save"
                        Command="{Binding SaveToDeviceCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        WidthRequest="80"
                        CornerRadius="22" />

                <Button Text="🖼️ Gallery"
                        Command="{Binding SaveToGalleryCommand}"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        WidthRequest="90"
                        CornerRadius="22" />
            </StackLayout>

            <!-- Welcome Message - Show when no image and not loading -->
            <StackLayout IsVisible="{Binding ShowWelcomeMessage}"
                         Spacing="20"
                         Margin="0,50,0,50">
                <Label Text="🎨" 
                       FontSize="64" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE" />
                <Label Text="Ready to create amazing images!" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Bold" />
                <Label Text="Enter your prompt above and tap Generate Image" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="#9E9E9E" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage> 