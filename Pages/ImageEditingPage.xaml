<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GoyIA.Pages.ImageEditingPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Edit Image"
             BackgroundColor="#F5F5F5">

    <ScrollView x:Name="MainScrollView">
        <StackLayout Padding="20" Spacing="20">

            <!-- Image Selection Buttons at Top -->
            <StackLayout Spacing="15">
                <Label Text="Select or capture an image to edit" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#333333"
                       HorizontalOptions="Center" />
                
                <StackLayout Orientation="Horizontal" 
                             Spacing="15" 
                             HorizontalOptions="Center">
                    <Button x:Name="SelectImageButton"
                            Text="ðŸ“± Select Image"
                            Command="{Binding SelectImageCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            WidthRequest="140"
                            CornerRadius="22" />

                    <Button x:Name="TakePhotoButton"
                            Text="ðŸ“· Take Photo"
                            Command="{Binding TakePhotoCommand}"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            WidthRequest="140"
                            CornerRadius="22" />
                </StackLayout>
            </StackLayout>

            <!-- Original Image Display -->
            <Border BackgroundColor="White" 
                    Stroke="#E0E0E0" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    IsVisible="{Binding IsOriginalImageVisible}">
                <StackLayout Spacing="10" Margin="15">
                    <Label Text="Original Image" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center" />
                    <Image Source="{Binding OriginalImageSource}" 
                           Aspect="AspectFit"
                           HeightRequest="300"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Border>

            <!-- Prompt Input Area -->
            <StackLayout Spacing="15">
                <Border BackgroundColor="White" 
                        Stroke="#E0E0E0" 
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Editor x:Name="PromptEditor"
                            Text="{Binding Prompt}"
                            Placeholder="Describe how you want to edit this image... (e.g., 'Add a beautiful sunset in the background')"
                            PlaceholderColor="#9E9E9E"
                            TextColor="Black"
                            FontSize="16"
                            MinimumHeightRequest="80"
                            MaximumHeightRequest="120"
                            Margin="15"
                            BackgroundColor="Transparent" />
                </Border>

                <Button x:Name="EditButton"
                        Text="âœ¨ Edit Image"
                        Command="{Binding EditImageCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        IsEnabled="{Binding IsNotLoading}" />

                <Label x:Name="StatusLabel"
                       Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="#D32F2F"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Loading Animation - appears below prompt when processing -->
            <StackLayout x:Name="LoadingAnimationSection"
                         IsVisible="{Binding IsLoading}"
                         Spacing="20"
                         Margin="0,10,0,10">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   Color="#6200EE"
                                   Scale="1.2" />
                <Label Text="Editing your image with AI magic..." 
                       FontSize="16" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Italic" />
            </StackLayout>

            <!-- Edited Image Result -->
            <Border BackgroundColor="White" 
                    Stroke="#E0E0E0" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    IsVisible="{Binding IsEditedImageVisible}">
                <StackLayout Spacing="10" Margin="15">
                    <Label Text="âœ¨ AI Edited Result" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#6200EE"
                           HorizontalOptions="Center" />
                    <Image Source="{Binding EditedImageSource}" 
                           Aspect="AspectFit"
                           HeightRequest="350"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Border>

            <!-- Action Buttons - Share and Save to Gallery -->
            <StackLayout Orientation="Horizontal" 
                         Spacing="15" 
                         HorizontalOptions="Center"
                         IsVisible="{Binding IsEditedImageVisible}">
                <Button Text="ðŸ“¤ Share"
                        Command="{Binding ShareImageCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        WidthRequest="120"
                        CornerRadius="22" />

                <Button Text="ðŸ’¾ Save to Gallery"
                        Command="{Binding SaveToGalleryCommand}"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        WidthRequest="150"
                        CornerRadius="22" />
            </StackLayout>

            <!-- Welcome Message - Show when no image selected -->
            <StackLayout IsVisible="{Binding ShowWelcomeMessage}"
                         Spacing="20"
                         Margin="0,50,0,50">
                <Label Text="âœ¨" 
                       FontSize="64" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE" />
                <Label Text="Ready to edit amazing images!" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Bold" />
                <Label Text="Select an image above to get started" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="#9E9E9E" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage> 