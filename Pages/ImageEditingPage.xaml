<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GoyIA.Pages.ImageEditingPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Edit Image"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Image Selection Area -->
            <StackLayout Grid.Row="0" Spacing="15">
                <Label Text="Select or capture an image to edit" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#333333"
                       HorizontalOptions="Center" />
                
                <StackLayout Orientation="Horizontal" 
                             Spacing="15" 
                             HorizontalOptions="Center">
                    <Button x:Name="SelectImageButton"
                            Text="ðŸ“± Select Image"
                            Command="{Binding SelectImageCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            WidthRequest="140"
                            CornerRadius="22" />

                    <Button x:Name="TakePhotoButton"
                            Text="ðŸ“· Take Photo"
                            Command="{Binding TakePhotoCommand}"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            WidthRequest="140"
                            CornerRadius="22" />
                </StackLayout>
            </StackLayout>

            <!-- Prompt Input Area -->
            <StackLayout Grid.Row="1" Spacing="15">
                <Border BackgroundColor="White" 
                        Stroke="#E0E0E0" 
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Editor x:Name="PromptEditor"
                            Text="{Binding Prompt}"
                            Placeholder="Describe how you want to edit this image... (e.g., 'Add a beautiful sunset in the background')"
                            PlaceholderColor="#9E9E9E"
                            TextColor="Black"
                            FontSize="16"
                            MinimumHeightRequest="80"
                            MaximumHeightRequest="120"
                            Margin="15"
                            BackgroundColor="Transparent" />
                </Border>

                <Button x:Name="EditButton"
                        Text="âœ¨ Edit Image"
                        Command="{Binding EditImageCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        IsEnabled="{Binding IsNotLoading}" />

                <Label x:Name="StatusLabel"
                       Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="#D32F2F"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Image Display Area -->
            <Border Grid.Row="2" 
                    BackgroundColor="White" 
                    Stroke="#E0E0E0" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    MinimumHeightRequest="300"
                    IsVisible="{Binding ShowImageArea}">
                <Grid>
                    <!-- Images comparison view -->
                    <Grid IsVisible="{Binding IsOriginalImageVisible}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Original Image Column -->
                        <StackLayout Grid.Column="0" Spacing="10" Margin="10">
                            <Label Text="Original" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="Center" />
                            <Border BackgroundColor="#F8F8F8" 
                                    Stroke="#E0E0E0" 
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 8">
                                <Image Source="{Binding OriginalImageSource}" 
                                       Aspect="AspectFit"
                                       HeightRequest="200"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />
                            </Border>
                        </StackLayout>
                        
                        <!-- Edited Image Column -->
                        <StackLayout Grid.Column="1" Spacing="10" Margin="10">
                            <Label Text="Edited" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#6200EE"
                                   HorizontalOptions="Center" />
                            <Border BackgroundColor="#F8F8F8" 
                                    Stroke="#E0E0E0" 
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 8">
                                <Grid>
                                    <!-- Edited Image -->
                                    <Image Source="{Binding EditedImageSource}" 
                                           IsVisible="{Binding IsEditedImageVisible}"
                                           Aspect="AspectFit"
                                           HeightRequest="200"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center" />
                                    
                                    <!-- Placeholder when no edited image -->
                                    <StackLayout IsVisible="{Binding IsEditedImageVisible, Converter={StaticResource InvertedBoolConverter}}"
                                                 VerticalOptions="Center" 
                                                 HorizontalOptions="Center"
                                                 Spacing="10">
                                        <Label Text="ðŸŽ¨" 
                                               FontSize="32" 
                                               HorizontalOptions="Center" 
                                               TextColor="#9E9E9E" />
                                        <Label Text="Edited image will appear here" 
                                               FontSize="12" 
                                               HorizontalOptions="Center" 
                                               TextColor="#9E9E9E" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </StackLayout>
                    </Grid>

                    <!-- Loading State -->
                    <StackLayout IsVisible="{Binding IsLoading}"
                                 VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 Spacing="20">
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                           Color="#6200EE"
                                           Scale="1.2" />
                        <Label Text="Editing your image with AI magic..." 
                               FontSize="16" 
                               HorizontalOptions="Center" 
                               TextColor="#6200EE"
                               FontAttributes="Italic" />
                    </StackLayout>
                </Grid>
            </Border>

            <!-- Welcome Message - Show when no image selected -->
            <StackLayout Grid.Row="2" 
                         IsVisible="{Binding ShowWelcomeMessage}"
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="20">
                <Label Text="âœ¨" 
                       FontSize="64" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE" />
                <Label Text="Ready to edit amazing images!" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       TextColor="#6200EE"
                       FontAttributes="Bold" />
                <Label Text="Select an image above to get started" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="#9E9E9E" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage> 